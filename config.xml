<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wordpress.codinganmaniac.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
<name>Splash</name>
<description>
Splashscreen
</description>
<author email="dev@cordova.apache.org" href="http://cordova.io">
Apache Cordova Team
</author>
<content src="index.html" />
<access origin="*" />
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />
<allow-intent href="tel:*" />
<allow-intent href="sms:*" />
<allow-intent href="mailto:*" />
<allow-intent href="geo:*" />
<platform name="android">
<allow-intent href="market:*" />
  <splash src="screen.png" density="land-ldpi"/>
    <splash src="screen.png" density="land-mdpi"/>
    <splash src="screen.png" density="land-hdpi"/>
    <splash src="screen.png" density="land-xhdpi"/>
    <splash src="screen.png" density="land-xxhdpi"/>
    <splash src="screen.png" density="land-xxxhdpi"/>
    <splash src="res/drawable-port-ldpi-v4/screen.png/screen.png" density="port-ldpi"/>
    <splash src="res/drawable-port-mdpi-v4/screen.png/screen.png" density="port-mdpi"/>
    <splash src="res/drawable-port-hdpi-v4/screen.png/screen.png" density="port-hdpi"/>
    <splash src="res/drawable-port-xhdpi-v4/screen.png/screen.png" density="port-xhdpi"/>
    <splash src="res/drawable-port-xxhdpi-v4/screen.png/screen.png" density="port-xxhdpi"/>
    <splash src="res/drawable-port-xxxhdpi-v4/screen.png/screen.png" density="port-xxxhdpi"/>
</platform>
<platform name="ios">
<allow-intent href="itms:*" />
<allow-intent href="itms-apps:*" />
</platform>
<strong><preference name="SplashScreen" value="screen" /></strong>
<strong> <preference name="AutoHideSplashScreen" value="false" /></strong>
<strong> <preference name="FadeSplashScreen" value="false" /></strong>
<engine name="android" spec="^6.2.2" />
<engine name="browser" spec="^4.1.0" />
<plugin name="cordova-plugin-battery-status" spec="^1.2.4" />
<plugin name="cordova-plugin-camera" spec="^2.4.1" />
<plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
<plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
<plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
